/*
  Privacy Guarantee - v4.0 Enhanced
  Glassmorphism, icon gradients, trust badge enhancements
*/
.privacy-section {
  background: rgba($green-50, 0.3);

  .privacy-card {
    background: $gradient-glass-light;
    backdrop-filter: blur(8px);
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: $radius-xl;
    padding: $space-6;
    box-shadow: $shadow-glass;

    .privacy-icon {
      width: 64px;
      height: 64px;
      background: $gradient-icon-emerald;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto $space-4;

      svg {
        width: 32px;
        height: 32px;
        color: #fff;
      }
    }

    h3 {
      color: $color-primary;
      margin-bottom: $space-3;
    }

    .trust-badges {
      display: flex;
      gap: $space-4;
      justify-content: center;
      margin-top: $space-6;

      .badge {
        padding: $space-2 $space-4;
        background: rgba($green-500, 0.1);
        border-radius: $radius-lg;
        font-size: $text-sm;
        font-weight: $weight-medium;
        color: $color-primary;
      }
    }
  }
}
