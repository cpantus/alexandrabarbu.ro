{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {}
  },
  "include": [
    "infrastructure/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules",
    "**/dist"
  ],
  "references": [
    { "path": "./infrastructure/hooks" }
  ]
}
