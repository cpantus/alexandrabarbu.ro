{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Pattern Schema",
  "description": "Schema for pattern metadata (frontmatter)",
  "type": "object",
  "required": ["name", "description", "category"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Pattern name (snake_case)",
      "pattern": "^[a-z][a-z0-9_]*$"
    },
    "description": {
      "type": "string",
      "description": "Brief pattern description"
    },
    "category": {
      "type": "string",
      "description": "Pattern category (e.g., 'content', 'strategy', 'meta')"
    },
    "tier": {
      "type": "string",
      "enum": ["tier1", "tier2", "tier3"],
      "description": "Loading tier"
    },
    "model": {
      "type": "string",
      "enum": ["haiku", "sonnet", "opus"],
      "description": "Recommended model"
    },
    "thinking": {
      "type": "string",
      "enum": ["none", "think", "think-hard", "ultrathink"],
      "description": "Thinking mode"
    },
    "chainable": {
      "type": "boolean",
      "description": "Can be chained with other patterns",
      "default": false
    },
    "inputSchema": {
      "type": "object",
      "description": "Expected input structure"
    },
    "outputSchema": {
      "type": "object",
      "description": "Expected output structure"
    },
    "dependencies": {
      "type": "array",
      "description": "Required patterns/skills",
      "items": {
        "type": "string"
      }
    },
    "version": {
      "type": "string",
      "description": "Pattern version",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    }
  }
}
